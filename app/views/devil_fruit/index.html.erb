<div class="main_image" style="height: 100vh; display: flex; justify-content: center; align-items: center;">
  <div class="text-center">
    <div class="pt-20">
      <div class="md:grid justify-items-stretch">
        <div class="font-bold justify-self-center text-5xl">Devil Fruit App</div>
        <div style="text-align: center;" class="pb-10">
          <% if @error_message %>
            <p class="text-lg"><%= @error_message %></p>
          <% end %>
          <% unless @devil_fruit %>
            <%= form_tag devil_fruit_result_path, method: :get do %>
              <%= label_tag :name, '' %>
              <%= text_field_tag :name %><br>
              <%= submit_tag '悪魔の実を食べる', class: "link link-hover text-lg" %>
            <% end %>
          <% end %>
          <% if @devil_fruit %>
            <div class="text-lg" style="display: flex; flex-direction: column; align-items: center;">
              <%= image_tag 'don.png', size: '300x200' %>
              <%= "#{@name}は#{@devil_fruit}を食べた" %>
              <%= link_to "https://twitter.com/share?url=https://devil-fruit.onrender.com/&text=#{@name}は#{@devil_fruit}を食べた%0A&hashtags=DevilFruitApp", class: 'link link-secondary link-hover', target: '_blank' do %>
                Twitterで共有する
              <% end %>
              <%= link_to "もう一つ食べる", devil_fruit_crush_path, class: 'link link-primary link-hover' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
