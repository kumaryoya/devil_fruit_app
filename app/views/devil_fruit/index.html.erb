<div class="main_image" style="height: 100vh;">
  <div class="text-center">
    <div class="pt-20">
      <div class="md:grid justify-items-stretch">
        <div class="font-bold md:w-2/3 xl:w-1/3 justify-self-center text-5xl pb-20">Devil Fruit App</div>
        <div style="text-align: center;" class="pb-10">
          <% unless @devil_fruit %>
            <%= form_tag devil_fruit_result_path, method: :get do %>
              <%= label_tag :name, '名前:' %>
              <%= text_field_tag :name %><br>
              <%= submit_tag '悪魔の実を食べる' %>
            <% end %>
          <% end %>
          <% if @error_message %>
            <p><%= @error_message %></p>
          <% elsif @devil_fruit %>
            <%= "#{@name}は#{@devil_fruit}を食べた！" %><br>
            <%= link_to "https://twitter.com/share?url=https://www.zoomania.top/zoos/ranking/&text=「#{@name}は#{@devil_fruit}を食べた！」%0A&hashtags=DevilFruitApp&hashtags=#{@devil_fruit}", class: 'btn btn-secondary text-white', target: '_blank' do %>
              共有
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
